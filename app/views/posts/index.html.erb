<h1>Your Feed</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="post-email"><%= post.user.username %></td>
        <td class="post-content"><%= link_to post.content, post_path(post) %></td>
        <% if post.user == current_user %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <% end %>
        <td class="post-favorite">
          <% if current_user.has_favorite?(post) %>
            <%= link_to '', unfavorite_post_path(post), method: :delete, class: "glyphicon glyphicon-heart" %>
          <% else %>
            <%= link_to '', favorite_post_path(post), method: :post, class: "glyphicon glyphicon-heart-empty" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
